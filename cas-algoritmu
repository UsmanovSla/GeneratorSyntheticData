<?php 
require("./db/db.php");

function kontrola ($promenna){
	//$promenna = EregI_Replace("<", "&lt;", $promenna);
	//$promenna = EregI_Replace(">", "&gt;", $promenna);
	//$promenna = EregI_Replace('"', '&quot;', $promenna);
	//$promenna = EregI_Replace('\'', '&quot;', $promenna);
	//$promenna=htmlspecialchars($promenna);
return $promenna;
}
$connect = $connect2;
$model = kontrola($_GET['model']);
$getclanek = mysql_query("SELECT status_aktualni,status_max from model where id='$model' limit 0,1",$connect2);
while ($clanky = mysql_fetch_array($getclanek)){
	$status_max=$clanky['status_max'];
	if (!$status_max) $status_max=1;
	$status_aktualni=$clanky['status_aktualni'];
	$percent=round($status_aktualni/$status_max*100);
}

if ($percent<100){
?>
<meta http-equiv="refresh" content="1;url=http://www.celysvet.cz/model/cas-algoritmu?model=<?php echo $model;?>">
<b>Zpracováno <?php echo $status_aktualni;?> z <?php echo $status_max;?> variant!</b>
 <div id="container" style="width:100%; height:50px; border:1px solid black;">
  <div id="progress-bar" style="width:<?php echo $percent;?>%;
       background-image:url(skin/progress.png);
       height:50px;">
  </div>
</div>
<?php }else{ ?>
<b>Zpracováno <?php echo $status_aktualni;?> z <?php echo $status_max;?> variant!</b>
<div id="container" style="width:100%; height:50px; border:1px solid black;">
  <div id="progress-bar" style="width:100%;
       background-image:url(skin/progress.png);
       height:50px;">
  </div>
</div>
<a href="JavaScript:window.close();">Zavøít stránku</a>
<?php } ?>
